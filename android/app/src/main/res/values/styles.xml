<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.AstralPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cosmic_blue</item>
        <item name="colorPrimaryVariant">@color/cosmic_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/cosmic_purple</item>
        <item name="colorSecondaryVariant">@color/cosmic_purple_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/cosmic_blue_dark</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.AstralPlayer.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/cosmic_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.AstralPlayer</item>
    </style>

    <!-- Fullscreen theme for video playback -->
    <style name="Theme.AstralPlayer.Fullscreen" parent="Theme.AstralPlayer">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- AstralStream theme alias -->
    <style name="Theme.AstralStream" parent="Theme.AstralPlayer" />

    <!-- Video player theme -->
    <style name="Theme.AstralStream.VideoPlayer" parent="Theme.AstralPlayer.Fullscreen">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Enhanced fullscreen theme -->
    <style name="Theme.AstralPlayer.FullScreen" parent="Theme.AstralPlayer">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>