<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Advanced Gesture Settings"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

        <!-- Double Tap Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Double Tap Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_double_tap_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable double tap to seek"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Seek duration (seconds)" />

            <SeekBar
                android:id="@+id/seekbar_long_press_duration"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:max="60"
                android:progress="10" />

            <TextView
                android:id="@+id/text_long_press_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10s"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Long Press Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Long Press Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_long_press_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable long press to seek"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max seek speed" />

            <SeekBar
                android:id="@+id/seekbar_long_press_speed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:max="32"
                android:progress="8" />

            <TextView
                android:id="@+id/text_long_press_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8x"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Swipe Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swipe Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_swipe_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable horizontal swipe to seek"
            android:padding="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_brightness_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable vertical swipe for brightness/volume"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Swipe sensitivity" />

            <SeekBar
                android:id="@+id/seekbar_swipe_sensitivity"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/text_swipe_sensitivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Pinch to Zoom Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pinch to Zoom Settings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_pinch_to_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable pinch to zoom"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Max zoom level" />

            <SeekBar
                android:id="@+id/seekbar_max_zoom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:max="400"
                android:progress="300" />

            <TextView
                android:id="@+id/text_max_zoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0x"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Save/Reset buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset to Default"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>