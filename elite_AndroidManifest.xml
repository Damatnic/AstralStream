<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.astralplayer">

    <!-- Elite Permissions for Comprehensive Video Playback -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Storage permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    
    <!-- Media and playback -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- Picture-in-Picture and overlay -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.PICTURE_IN_PICTURE" />
    
    <!-- Hardware features -->
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
    <uses-feature android:name="android.software.leanback" android:required="false" />
    <uses-feature android:name="android.hardware.type.television" android:required="false" />
    <uses-feature android:name="android.software.picture_in_picture" android:required="false" />
    
    <!-- High performance requirements -->
    <uses-feature android:name="android.hardware.vulkan.level" android:version="1" android:required="false" />
    <uses-feature android:name="android.hardware.vulkan.version" android:version="0x401000" android:required="false" />
    
    <application
        android:name=".app.EliteAstralPlayerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AstralPlayer"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:preserveLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:extractNativeLibs="true"
        android:usesCleartextTraffic="true"
        tools:targetApi="34">
        
        <!-- Main Activity -->
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AstralPlayer.NoActionBar"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Elite Video Player Activity with Maximum Browser Integration -->
        <activity
            android:name=".presentation.player.EliteVideoPlayerActivity"
            android:exported="true"
            android:theme="@style/Theme.AstralPlayer.FullScreen"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout|keyboard|keyboardHidden|navigation|uiMode"
            android:launchMode="singleTask"
            android:supportsPictureInPicture="true"
            android:resizeableActivity="true"
            android:hardwareAccelerated="true"
            android:taskAffinity="">
            
            <!-- HIGH PRIORITY: Video MIME types -->
            <intent-filter android:priority="1000" android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="content" />
                <data android:scheme="file" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:mimeType="video/*" />
                <data android:mimeType="application/mp4" />
                <data android:mimeType="application/x-mpegURL" />
                <data android:mimeType="application/vnd.apple.mpegurl" />
                <data android:mimeType="application/dash+xml" />
                <data android:mimeType="application/vnd.ms-sstr+xml" />
            </intent-filter>
            
            <!-- CRITICAL: Adult content sites and all video extensions -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="content" />
                <data android:scheme="file" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="*" />
                
                <!-- Standard video formats -->
                <data android:pathPattern=".*\\.mp4" />
                <data android:pathPattern=".*\\.MP4" />
                <data android:pathPattern=".*\\.mkv" />
                <data android:pathPattern=".*\\.MKV" />
                <data android:pathPattern=".*\\.avi" />
                <data android:pathPattern=".*\\.AVI" />
                <data android:pathPattern=".*\\.mov" />
                <data android:pathPattern=".*\\.MOV" />
                <data android:pathPattern=".*\\.wmv" />
                <data android:pathPattern=".*\\.WMV" />
                <data android:pathPattern=".*\\.flv" />
                <data android:pathPattern=".*\\.FLV" />
                <data android:pathPattern=".*\\.webm" />
                <data android:pathPattern=".*\\.WEBM" />
                <data android:pathPattern=".*\\.m4v" />
                <data android:pathPattern=".*\\.M4V" />
                <data android:pathPattern=".*\\.3gp" />
                <data android:pathPattern=".*\\.3GP" />
                <data android:pathPattern=".*\\.3g2" />
                <data android:pathPattern=".*\\.3G2" />
                
                <!-- Streaming formats -->
                <data android:pathPattern=".*\\.m3u8" />
                <data android:pathPattern=".*\\.M3U8" />
                <data android:pathPattern=".*\\.mpd" />
                <data android:pathPattern=".*\\.MPD" />
                <data android:pathPattern=".*\\.ism" />
                <data android:pathPattern=".*\\.ISM" />
                
                <!-- Handle complex filenames with multiple dots -->
                <data android:pathPattern=".*\\..*\\.mp4" />
                <data android:pathPattern=".*\\..*\\.mkv" />
                <data android:pathPattern=".*\\..*\\.avi" />
                <data android:pathPattern=".*\\..*\\.m3u8" />
                <data android:pathPattern=".*\\..*\\.mpd" />
                
                <!-- Handle query parameters -->
                <data android:pathPattern=".*\\?.*\\.mp4.*" />
                <data android:pathPattern=".*\\?.*\\.mkv.*" />
                <data android:pathPattern=".*\\?.*\\.m3u8.*" />
            </intent-filter>
            
            <!-- SEND intent for sharing videos -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="application/mp4" />
            </intent-filter>
            
            <!-- Streaming protocols -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="rtsp" />
                <data android:scheme="rtmp" />
                <data android:scheme="mms" />
                <data android:scheme="rtp" />
            </intent-filter>
            
            <!-- YouTube and major video sites (as fallback) -->
            <intent-filter android:priority="500">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <!-- Popular video hosting domains -->
                <data android:host="www.youtube.com" />
                <data android:host="youtube.com" />
                <data android:host="youtu.be" />
                <data android:host="m.youtube.com" />
                <data android:host="vimeo.com" />
                <data android:host="www.vimeo.com" />
                <data android:host="dailymotion.com" />
                <data android:host="www.dailymotion.com" />
                <data android:host="twitch.tv" />
                <data android:host="www.twitch.tv" />
            </intent-filter>
            
            <!-- Adult content domains (high priority for specialized handling) -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <!-- Major adult content sites -->
                <data android:host="*.pornhub.com" />
                <data android:host="*.xvideos.com" />
                <data android:host="*.xhamster.com" />
                <data android:host="*.redtube.com" />
                <data android:host="*.youporn.com" />
                <data android:host="*.tube8.com" />
                <data android:host="*.xtube.com" />
                <data android:host="*.spankbang.com" />
                <data android:host="*.xnxx.com" />
                <data android:host="*.beeg.com" />
            </intent-filter>
        </activity>
        
        <!-- Background Video Service -->
        <service
            android:name=".service.BackgroundVideoService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
        
        <!-- Media Button Receiver -->
        <receiver
            android:name=".receiver.MediaButtonReceiver"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        
        <!-- Network State Receiver -->
        <receiver
            android:name=".receiver.NetworkStateReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        
        <!-- Boot Receiver for auto-resume -->
        <receiver
            android:name=".receiver.BootReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        
        <!-- File Provider for sharing and cache -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Cast Options Provider -->
        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value=".cast.CastOptionsProvider" />
        
        <!-- Performance optimizations -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" />
        <meta-data
            android:name="android.allow_multiple_resumed_activities"
            android:value="true" />
            
        <!-- Elite features -->
        <meta-data
            android:name="com.astralplayer.elite.CODEC_SUPPORT"
            android:value="ALL" />
        <meta-data
            android:name="com.astralplayer.elite.ADULT_CONTENT_OPTIMIZED"
            android:value="true" />
        <meta-data
            android:name="com.astralplayer.elite.HDR_SUPPORT"
            android:value="true" />
        <meta-data
            android:name="com.astralplayer.elite.4K_SUPPORT"
            android:value="true" />
            
    </application>
    
    <!-- Queries for external app detection -->
    <queries>
        <!-- Video apps -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="video/*" />
        </intent>
        
        <!-- Browsers -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="http" />
        </intent>
        
        <!-- File managers -->
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
            <data android:mimeType="*/*" />
        </intent>
    </queries>
    
</manifest>